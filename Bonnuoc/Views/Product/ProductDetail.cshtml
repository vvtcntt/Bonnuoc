                                <h3 class="name-product">@Model.Name</h3>
                                <div class="thumb"><img src="@Model.ImageLinkThumb" alt="@Model.Title" title="@Model.Name"></div>
                                <div class="price">
                                    <span>
                                        Giá bán:
                                        @if (Model.PriceSale > 1)
                                        {                                <span class="new-price">@string.Format("{0:#,#}", Model.PriceSale) vnđ</span>
                                        }
                                        else
                                        {                                 <span class="new-price">Liên hệ ngay</span>
                                        }
                                    </span><br>
                                    <span>Giá thị trường: <span class="old-price">@string.Format("{0:#,#}", Model.Price) vnđ</span></span><br>
                                </div>
                                <div class="button">
                                    @if (Request.Browser.IsMobileDevice)
                                    {
                                        <a href="/Order/OrderAdd?id=@Model.id&Ord=1" class="buy-now" title="đặt hàng">Mua ngay</a>

                                    }
                                    else
                                    {
                                        <input type="button" class="buy-now" id="open_popup" name="open_popup" rel="miendatwebPopup" href="#popup_content" onclick="CreateOrder(@Model.id)" value="Mua ngay" />

