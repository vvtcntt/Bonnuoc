                        </div>
                        <div class="Nvar1">
                            <div class="Name_one">
                                <span class="iCon"></span>
                                <h3 class="Name">Tính năng @Model.Name</h3>
                            </div>
                        </div>
                        <div class="Content_ContentProduct">
                            @Html.Raw(Model.Content)

                        </div>
                        <div class="VideoContent">

                            @if (ViewBag.video != null && ViewBag.video != "")
                            {
                                <div class="Nvar1">
                                    <div class="Name_one">
                                        <span class="iCon"></span>
                                        <span class="Name">Video hướng dẫn lắp đặt và sử dụng</span>
                                    </div>
                                </div>
                                <iframe width="100%" height="560" src="https://www.youtube.com/embed/@Html.Raw(ViewBag.video)?rel=0&amp;showinfo=0" frameborder="0" allowfullscreen></iframe>
                            }
                        </div>
                        <div class="Clear"></div>
