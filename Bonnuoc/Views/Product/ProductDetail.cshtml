                        </div>
                    </div>
                    <div id="SaleProduct"> 
                        @Html.Raw(ViewBag.chuoianh)
                    </div>
                    <div class="Parameter">
                        <div class="Nvar1">
                            <div class="Name_one">
                                <span class="iCon"></span>
                                <span class="Name">Thông số kỹ thuật @Model.Name</span>
                            </div>
                        </div>
                        <div class="Content_Parameter">
                            <table>
                                <tr>
                                    <td>Tên sản phẩm :</td>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <td>Mã sản phẩm :</td>
                                    <td>@Model.Code</td>
                                </tr>
                                <tr>
                                    <td>Thương hiệu</td>
                                    <td>@ViewBag.manu </td>
                                </tr>
                                <tr>
                                    <td>Dung tích (Lít):</td>
                                    <td><span class="xx">≈</span> @Html.Raw(ViewBag.capa)</td>
                                </tr>
                                <tr>
                                    <td>Bảo hành</td>
                                    <td>@Model.Warranty năm</td>
                                </tr>
                               
                                <tr>
                                    <td>Kiểu bồn:</td>
                                    @if (Model.Design == 0)
                                    {
                                        <td>Bồn nằm</td>
                                    }
                                    else
                                    {
                                        <td>Bồn đứng</td>
                                    }
                                </tr>
                                <tr>
                                    <td>Loại bồn:</td>
                                    @if (Model.Material == 0)
                                    {
                                        <td>Inox</td>
                                    }
                                    else
                                    {
                                        <td>Nhựa</td>
                                    }
                                </tr>
                                <tr>
                                    <td>Số người sử dụng phù hợp:</td>
                                     
                                        <td>@Html.Raw(ViewBag.songuoisd)</td>
                                    
                                </tr>
                                
@if (Model.Size != null && Model.Size != "")
                                {
                                <tr>
                               @if (Model.Material == 0)
                                    {

                                        <td>Kích thước (Đường kính x Dài thân x Dài chân x Rộng chân x Cao)</td>
                                    }
                               else
                               { 
                                    <td>Kích thước (Đường kính x Chiều cao x Chiều cao cả nắp x Chiều dài)</td>
                                   

                               }
                                    
                                    <td>@Model.Size (mm)</td>
                                </tr>
}

                               @Html.Raw(ViewBag.chuoi)
                            </table>
                            
                            @Html.Raw(ViewBag.xemthem)
