@{
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
}

@model Bonnuoc.Models.tblNew
<div id="Main">
    <div id="MainContent">
        <div class="Root">
            <nav>@Html.Raw(ViewBag.nUrl)</nav>
        </div>
        <div id="News">

            @{Html.RenderAction("paritalRighNewsDetail", "News");}
            <div id="RightNews">
                <div class="nVar_NewsDetail">
                    <h1>@Model.Name</h1>
                    <div class="Clear"></div>
                    <div class="toolbar"><span class="Cate"><span></span>@Html.Raw(ViewBag.NameMenu)</span><span class="Cata"><span></span>Thời gian gửi: @Model.DateCreate</span><span class="Account"><span></span>@Html.Raw(ViewBag.Username)</span> </div>
                </div>
                <div class="NewsDetail">
                    <div class="Des_Detail">
                        @Html.Raw(ViewBag.Descriptionss)

                    </div>
                    <div class="Lienquan">
                        @Html.Raw(ViewBag.chuoinew)
                    </div>
                    <div class="Content_Detail">
                        @Html.Raw(Model.Content)
                    </div>
                    <div class="Tag"> <span>Tags</span>  @Html.Raw(ViewBag.chuoitag)</div>
                </div>
                <div id="Comment">
                    <div class="nVar_2">
                        <span>Nhận xét đánh giá</span>
                    </div>
                    <div id="Sluion">
                        <div class="Mxh" style="float: left; width: 100%; margin-left: 2px">
                            <div style="float:left" class="fb-like" data-send="true" data-layout="button_count" data-width="60"
                                 data-show-faces="true">
                            </div>
                            <div class="fb-send" style="float:left; margin:0px 5px" data-href="@Request.Url.ToString()"></div>
                            <div id="g" style="float: left; margin: 0px 0px;width: auto">
                                <g:plusone size="medium"></g:plusone>
                            </div>
                        </div>
                    </div>
                    <div id="review">
                        <span class="rv1">Cho điểm bài viết</span>
                        <span class="rv2">Mời bạn đánh giá về @Model.Name</span>
                        <div id="Content_review">
                            <input type="radio" name="review" value="1" class="rd1" /> <img src="~/Content/Display/iCon/rating_1_rstar.gif" alt="1 điểm" />
                            <input type="radio" name="review" value="2" class="rd2" /><img src="~/Content/Display/iCon/rating_2_rstar.gif" alt="2 điểm" />
                            <input type="radio" name="review" value="3" class="rd3" /><img src="~/Content/Display/iCon/rating_3_rstar.gif" alt="3 điểm" />
                            <input type="radio" name="review" value="4" class="rd4" /><img src="~/Content/Display/iCon/rating_4_rstar.gif" alt="3 điểm" />
                            <input type="radio" name="review" value="5" class="rd5" /><img src="~/Content/Display/iCon/rating_5_rstar.gif" alt="5 điểm" />
                        </div>
                    </div>
                    <div id="ConmentFacebook">
                        <div class="fb-comments" data-href="@Request.Url.ToString()" data-num-posts="20" style="width:100%; float:left; margin:0px" width="100%"></div>


                    </div>
                </div>
                <div class="Tintuclienquan">
                    <span class="Name">Tin tức liên quan</span>
                    <div class="Content_Tintuclienquan">
                        <ul>
                            @Html.Raw(ViewBag.chuoinewnews)
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
@Html.Raw(ViewBag.Coppy)
