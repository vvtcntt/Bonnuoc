@{
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
}
@using PagedList.Mvc;
@model PagedList.IPagedList<Bonnuoc.Models.tblNew>

<div id="Main">
    <div class="Root">
        <nav>@Html.Raw(ViewBag.nUrl)</nav>
    </div>
    <div id="News">

        <div id="LeftNews">
            <div id="LeftNews">
                <div class="Tear_Cate">
                    <div class="nVar_Tear_Cate" style="background:#ff3c00">
                        <span>Chuyên mục chính</span>
                    </div>
                    <div class="Content_Tear_Cate">
                        <ul>
                            <li><a href="" title=""><span style="font-weight:normal">❖</span>  Về Bigsea Việt Nam</a></li>
                            <li><a href="/0/Tin-tuc" title="Tin tức"><span style="font-weight:normal">❖</span>  Tin tức</a></li>
                            <li><a href="/0/Tu-van-ky-thuat" title="Tư vấn kỹ thuật"><span style="font-weight:normal">❖</span>  Tư vấn kỹ thuật</a></li>

                            <li><a href="/0/He-thong-phan-phoi" title="Hệ thống phân phối"><span style="font-weight:normal">❖</span>  Hệ thống phân phối</a></li>

                            <li><a href="/0/Tuyen-dung" title="Tuyển dụng"><span style="font-weight:normal">❖</span>  Tuyển dụng</a></li>
                            <li><a href="/Lien-he" title="Liên hệ"><span style="font-weight:normal">❖</span>  Liên hệ</a></li>
                        </ul>
                    </div>
                </div>
                <div class="Tear_Cate">
                    <div class="nVar_Tear_Cate">
                        <span>Tin tức khác</span>
                    </div>
                    <div class="Content_Tear_Cate1">
                        <ul>
                            @Html.Raw(ViewBag.chuoinewnews)
                        </ul>
                    </div>
                </div>


            </div>



        </div>
        <div id="RightNews">
            <div class="nVar_News">
                <span></span><h1>@Html.Raw(ViewBag.Name)</h1>
            </div>
            @foreach (var item in Model)
            {
                <div class="Tear_News">
                    <a href="/Tin-tuc/@item.Tag" title="@item.Name"><img src="@item.Images" alt="@item.Name" title="@item.Name" /></a>
                    <a href="/Tin-tuc/@item.Tag" title="@item.Name">@item.Name</a>
                    <span class="date"><span class="iCon"></span>Thời gian gửi : @item.DateCreate</span>
                    <span class="des">
                        @item.Description
                    </span>
                </div>
            }
            @Html.PagedListPager(Model, page => Url.Action("TagNews", new { page = page, sortOrder = ViewBag.CurrentSortOrder, sortName = ViewBag.CurrentSortName, sortLevel = ViewBag.CurrentSortLevel }), (PagedListRenderOptions)ViewBag.ship)


        </div>
    </div>
    <div class="Clear"></div>
</div>
